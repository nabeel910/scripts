#!/bin/bash
packages=$(pacman -Qu | wc -l)
aurpackages=$(paru -Qua | wc -l)
allpackages=$(paru -Qu | wc -l)

if [ "$allpackages" -gt 0 ];
then
	echo "ğŸ“¦ $packages-$aurpackages"  
else
	echo "ğŸ“¦ 0"
fi

if [ "$packages" -gt 0 ];
then
	dunstify "Packages" "$(pacman -Qu)"
fi

if [ "$aurpackages" -gt 0 ];
then
	dunstify "AUR Packages" "$(paru -Qua)"
fi
